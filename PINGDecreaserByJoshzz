local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BlurryIntro"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local blur = Instance.new("BlurEffect")
blur.Size = 0
blur.Parent = game.Lighting

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1,0,1,0)
frame.BackgroundTransparency = 1
frame.Parent = screenGui

local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0.8,0,0.2,0)
textLabel.Position = UDim2.new(0.1,0,0.3,0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "THIS SCRIPT IS NO LONGER WORKING SO PLEASE VISIT MY CHANNEL TO GET THE LATEST VERSION"
textLabel.TextScaled = true
textLabel.Font = Enum.Font.Arcade
textLabel.TextColor3 = Color3.fromRGB(255,255,255)
textLabel.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.3,0,0.1,0)
button.Position = UDim2.new(0.35,0,0.6,0)
button.BackgroundColor3 = Color3.fromRGB(30,144,255)
button.Text = "Visit YouTube"
button.TextScaled = true
button.TextColor3 = Color3.fromRGB(255,255,255)
button.Font = Enum.Font.GothamBold
button.Parent = frame

local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local blurTween = TweenService:Create(blur, tweenInfo, {Size = 24})
blurTween:Play()

local function showNotification(message)
    local notif = Instance.new("TextLabel")
    notif.Size = UDim2.new(0.3,0,0.08,0)
    notif.Position = UDim2.new(0.35,0,0.75,0)
    notif.BackgroundColor3 = Color3.fromRGB(0,0,0)
    notif.BackgroundTransparency = 0.5
    notif.TextColor3 = Color3.fromRGB(255,255,255)
    notif.Font = Enum.Font.GothamBold
    notif.TextScaled = true
    notif.Text = message
    notif.Parent = frame
    task.delay(2, function()
        notif:Destroy()
    end)
end

button.MouseButton1Click:Connect(function()
    local url = "https://www.youtube.com/@JoshzzLuaScripts"
    if syn then
        syn.request({Url = url, Method = "GET"})
    elseif http_request then
        http_request({Url = url, Method = "GET"})
    else
        setclipboard(url)
    end
    showNotification("Copied YouTube Channel Link")
end)

task.delay(30, function()
    local removeTween = TweenService:Create(blur, tweenInfo, {Size = 0})
    removeTween:Play()
    removeTween.Completed:Wait()
    screenGui:Destroy()
end)
